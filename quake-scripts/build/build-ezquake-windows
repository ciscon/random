#!/bin/bash
# force=1 to skip revision check

set -e

unset CC
export CFLAGS=" -pipe "
export LDFLAGS="$CFLAGS"

bindir="/mnt/nas-quake/binaries/win/ezquake"
buildroot="/tmp/build"
gitdir="${buildroot}/ezquake-source"
gitrepo="https://github.com/ezQuake/ezquake-source.git"
#using purely to check revision
remotehead=$(git ls-remote "$gitrepo" HEAD|head -1|awk '{print $1}'|cut -c1-6)

if [ -z "$remotehead" ];then
  echo "couldn't retrieve remote head"
  exit 1
fi

if [ "$force" != "1" ];then
  #check whether or not we need to proceed
  for bin in "${bindir}/"ezquake-*-??????.zip;do
    temprev=$(echo "$bin"|awk -F'[.-]' '{print $(NF-1)}')
    if [ "$temprev" = "$remotehead" ];then
      echo "revision already built, exiting."
      exit 0
    fi
  done
fi

if [ -d "$gitdir" ];then
  rm -rf "$gitdir"
  sync
fi

mkdir -p "$buildroot"
git clone "$gitrepo" "$gitdir" || exit 1
cd "$gitdir"
git checkout master > /dev/null 2>&1
git reset --hard origin/master >/dev/null 2>&1
git clean -qfdx >/dev/null 2>&1
git pull >/dev/null 2>&1
#just in case it's changed since remote pull
VERSION=$(sed -n 's/.*VERSION_NUMBER.*"\(.*\)".*/\1/p' version.h)
REVISION=$(git log -n 1|head -1|awk '{print $2}'|cut -c1-6)

rm -f *.exe
rm -f *.zip

sed -i 's/^CFLAGS=/CFLAGS+=/g' .config_windows-clang
sed -i 's/^LDFLAGS=/LDFLAGS+=/g' .config_windows-clang

if [ -d output ];then
	rm -rf output
fi
mkdir -p output
make clean;MODERN_OPENGL_ONLY=1 EZ_CONFIG_FILE=.config_windows-clang nice make -j$(nproc)
mv *.exe output/.

#clean up files
(git clean -qfdx -e output)

make clean;CLASSIC_OPENGL_ONLY=1 EZ_CONFIG_FILE=.config_windows-clang nice make -j$(nproc)
mv *.exe output/.

strip output/*

zip -9 -j -r "ezquake-clang-${VERSION}-${REVISION}.zip" output/*.exe

if [ $? -eq 0 ];then
  if [ -d  "$bindir" ];then
    ln -sf *.zip ezquake-latest.zip && cp -Pf --remove-destination *.zip "$bindir/"
  else
    echo "$bindir not found, bailing out."
    exit 1
  fi
else
  echo "something failed, bailing out."
  exit 1
fi

echo "ezquake binary created successfully and copied to $bindir"
rm -rf "$gitdir"
exit 0
